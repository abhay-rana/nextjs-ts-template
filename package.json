{
    "name": "nextjs-ts-template",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "yarn": "please-use-pnpm",
        "npm": "please-use-pnpm",
        "pnpm": ">= 8.0.0"
    },
    "scripts": {
        "dev": "pnpm open-browser && next dev",
        "open-browser": "start http://localhost:3000",
        "build": "next build",
        "start": "next start",
        "lint": "next lint .",
        "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
        "format": "npx prettier --write \"**/*.{js,ts,tsx}\"",
        "prepare": "husky install",
        "clean": "rm -rf node_modules pnpm-lock.yaml"
    },
    "dependencies": {
        "react": "^18",
        "react-dom": "^18",
        "next": "13.5.5"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "autoprefixer": "^10",
        "eslint": "^8",
        "eslint-config-next": "13.5.4",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.0.1",
        "postcss": "^8",
        "prettier": "2.8.8",
        "prettier-plugin-tailwindcss": "^0.2.8",
        "tailwindcss": "^3",
        "typescript": "^5"
    }
}
