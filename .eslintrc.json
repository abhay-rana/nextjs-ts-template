{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "root": true,
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["warn"],
        "import/no-unresolved": "error",
        "import/named": "error",
        "no-undef": ["error"],
        "no-var": ["error"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
